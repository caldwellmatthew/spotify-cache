{
  "name": "spotify-cache",
  "version": "1.0.0",
  "description": "Polls Spotify recently-played API and caches results to PostgreSQL",
  "main": "dist/server/index.js",
  "scripts": {
    "dev:server": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/worker/index.ts",
    "build": "tsc",
    "start:server": "node dist/server/index.js",
    "start:worker": "node dist/worker/index.js",
    "migrate": "psql $DATABASE_URL -f migrations/001_initial.sql",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
